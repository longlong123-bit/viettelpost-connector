<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_payment_inherit_vtp_form_view" model="ir.ui.view">
            <field name="name">account.payment.inherit.vtp.form.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority" eval="1000"/>
            <field name="arch" type="xml">
                <button name="action_post" position="after">
                    <button name="action_create_and_print"
                            context="{'is_print': True}"
                            string="Create &amp; In A5"
                            type="object" class="btn-primary"
                            attrs="{'invisible':[('state', '!=', 'draft')]}"/>
                </button>
                <xpath expr="//div[hasclass('oe_button_box')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/group[@name='group1']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/group[@name='group2']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/group[@name='group1']" position="after">
                    <group name="group1">
                        <field name="is_internal_transfer" invisible="1"/>
                        <field name="amount" invisible="1"/>
                        <field name="date" position="move" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="prepared_by_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="payment_type" widget="radio" options="{'horizontal': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="partner_id" position="move" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="reason"/>
                        <field name="object_receipt_payment"/>
                    </group>
                </xpath>
                <xpath expr="//group/group[@name='group2']" position="after">
                    <group name="group2">
                        <label for="voucher_sequence" class="o_form_label" string="Voucher"/>
                        <div class="o_row">
                            <field name="voucher_sequence" readonly="1" force_save="1"/>
                            <field name="journal_id" attrs="{'readonly':[('state', '!=', 'draft')]}" domain="[('type', 'in', ('bank', 'cash'))]" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                        </div>
                        <field name="payment_category_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="amount" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <field name="partner_address"/>
                        <field name="partner_bank_id" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        <label for="month_of_payment_period" class="o_form_label" attrs="{'invisible': [('payment_type', '=', 'outbound')]}" string="Month/Year (If debts receipt)"/>
                        <div class="o_row" attrs="{'invisible': [('payment_type', '=', 'outbound')]}">
                            <field name="month_of_payment_period"/>
                            <field name="year_of_payment_period"/>
                        </div>
                        <field name="arise" attrs="{'invisible': [('year_of_payment_period', '=', False)]}"/>
                        <field name="paid" attrs="{'invisible': [('year_of_payment_period', '=', False)]}"/>
                        <field name="debts" force_save="1" attrs="{'invisible': [('year_of_payment_period', '=', False)]}"/>
                        <field name="destination_journal_id" invisible="1"/>
                        <field name="payment_method_line_id" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="account_payment_inherit_vtp_tree_view" model="ir.ui.view">
            <field name="name">account.payment.inherit.vtp.form.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="voucher_sequence"/>
                </field>
            </field>
        </record>
    </data>
</odoo>