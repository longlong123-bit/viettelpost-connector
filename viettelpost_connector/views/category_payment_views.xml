<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="payment_category_form_view" model="ir.ui.view">
        <field name="name">payment.category.form.view</field>
        <field name="model">payment.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_category_tree_view" model="ir.ui.view">
        <field name="name">payment.category.tree.view</field>
        <field name="model">payment.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="payment_category_search_view" model="ir.ui.view">
        <field name="name">payment.category.search.view</field>
        <field name="model">payment.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="payment_category_action">
        <field name="name">Payment categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.category</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('payment_category_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('payment_category_form_view')})]"/>
        <field name="search_view_id" ref="payment_category_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payment category.
            </p>
        </field>
    </record>
</odoo>