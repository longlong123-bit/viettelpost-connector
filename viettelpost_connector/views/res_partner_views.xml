<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_view_vtp_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.vtp.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="ViettelPost Receiver Address">
                    <group>
                        <group>
                            <field name="vtp_address"/>
                        </group>
                        <group>
                            <field name="vtp_street"/>
                            <field name="vtp_ward_id"/>
                            <field name="vtp_district_id"/>
                            <field name="vtp_province_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>