<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="div.o_list_buttons" t-operation="append">
            <t t-name="ListView.recoverBtn">
                <button t-if="widget.modelName=='viettelpost.store'"
                        type="button"
                        class="btn btn-primary o_button_create_store">
                    Create
                </button>
                <button t-if="widget.modelName=='sale.order'"
                        type="button"
                        style="margin-left: 5px !important;"
                        class="btn btn-primary o_button_register_payment">
                    Register Payment
                </button>
            </t>
        </t>
    </t>
</templates>
